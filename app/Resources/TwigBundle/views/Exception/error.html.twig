<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
        <title>{{ 'error_page.500.title'| trans }}</title>
        {% stylesheets
        '@ABOMainBundle/Resources/public/css/matejer.min.css'
        '@ABOMainBundle/Resources/public/css/custom.min.css' filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon_32.ico') }}" />
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        {# javascripts
        '@ABOMainBundle/Resources/public/js/matejer.min.js'
        '@ABOMainBundle/Resources/public/js/matejer/matejer_v_1.0.js' %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts #}
    </head>
    <body class="hold-transition skin-blue layout-top-nav">
        <div class="wrapper">
            <div class="content-wrapper">
                <div class="container">
                    <section class="content" style="height: 100vh;">
                        <div class="error-page" style="margin-top: 100px;">
                            <h2 class="headline text-red"> 500</h2>
                            <div class="error-content">
                                <h3><i class="fa fa-warning text-red"></i> {{ 'error_page.500.oops'| trans }}</h3>
                                <p>{{ 'error_page.500.sorry'|trans }}<br>{{ 'error_page.500.sorry2'|trans }} <a href="{{ path('matejer_support_contact_us') }}">{{ 'error_page.500.contact'|trans }}</a></p>
                                <p>
                                    <a href="{{ path('abo_main_home_home') }}" class="btn btn-link">{{ 'matejer_main.matejer_com'|trans }}</a>
                                    {% if is_granted('ROLE_USER') %}
                                        <a href="{{ path('abo_user_profile_show') }}" class="btn btn-link">{{ 'matejer_user.profile'|trans }}</a>
                                    {% endif %}
                                    <a href="{{ path('abo_main_gallery_gallery') }}" class="btn btn-link">{{ 'matejer_main.gallery'|trans }}</a>
                                </p>
                                <form class="search-form">
                                    <div class="input-group">
                                        <input type="text" name="search" class="form-control" placeholder="{{ 'matejer_main.search_placeholder'|trans }}">
                                        <div class="input-group-btn">
                                            <button type="submit" name="submit" class="btn btn-danger btn-flat"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-78469348-1', 'auto');
            ga('send', 'pageview');
        </script>
    </body>
</html>
