<div class="box box-{[{ theme }]} box-solid box-shadow">
	<div class="box-header">
		<h3 class="box-title">{{ ratingProduct.user.fullname }}</h3>
		<span class="pull-right"><i class="fa fa-clock-o"></i> {{ ratingProduct.date|date('d/m/Y') }}</span>
	</div>
	<div class="box-body no-padding">
		<table class="table table-hover">
			<tbody>
			<tr><td COLSPAN=2 class="bg-gray-light rate-value">{{ ratingProduct.transValue(0)|trans }}<span class="pull-right" rate-star rate-value="{{ ratingProduct.rate.value }}"></span></td></tr>
			<tr>
				<td class="col-xs-6{% if ratingProduct.rate.valueOne == 0 %} text-muted{% endif %}">{{ ratingProduct.transValue(1)|trans }}<br /><span rate-star star-size="sm" rate-value="{{ ratingProduct.rate.valueOne }}"></span></td>
				<td class="col-xs-6{% if ratingProduct.rate.valueTwo == 0 %} text-muted{% endif %}">{{ ratingProduct.transValue(2)|trans }}<br /><span rate-star star-size="sm" rate-value="{{ ratingProduct.rate.valueTwo }}"></span></td>
			</tr>
			<tr>
				<td class="col-xs-6{% if ratingProduct.rate.valueThree == 0 %} text-muted{% endif %}">{{ ratingProduct.transValue(3)|trans }}<br /><span rate-star star-size="sm" rate-value="{{ ratingProduct.rate.valueThree }}"></span></td>
				<td class="col-xs-6{% if ratingProduct.rate.valueFour == 0 %} text-muted{% endif %}">{{ ratingProduct.transValue(4)|trans }}<br /><span rate-star star-size="sm" rate-value="{{ ratingProduct.rate.valueFour }}"></span></td>
			</tr>
			{% if ratingProduct.rate.comment|length > 1 %}
				<tr>
					<td COLSPAN=2>
						{{ ratingProduct.rate.comment }}
					</td>
				</tr>
			{% endif %}
			</tbody>
		</table>
	</div>
</div>
