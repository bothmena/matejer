<div data-stat="success" data-template="true" data-form-stat="danger">
    {% form_theme form ':Form:abo_form_simple.html.twig' %}
    {{ form_start( form, {'attr': {'id': 'form_shop_images'}} ) }}
        <div class="modal-body" style="padding-bottom: 0;">
            <div class="row" style="height: 50px;width: 100%; padding: 15px 0 10px 10px;">
                <button type="button" class="close" ng-click="dismiss()" style="position: absolute;right: 8px;top: 5px;" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                <h3 class="modal-title text-capitalize text-center text-info">{{ 'message.modal_title'| trans({'%shopname%': shop.name}) }}</h3>
            </div>
            <hr class="divider" style="margin: 5px 0 10px 0;">
            <div class="row">
                <div class="col-xs-12">
                    {{ form_label(form.subject) }}
                    {{ form_widget(form.subject) }}
                    {{ form_errors(form.subject) }}
                    
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message) }}
                    {{ form_errors(form.message) }}
                    
                    {{ form_row(form._token) }}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger btn-flat medium-btn pull-right" ng-click="submit()" style="margin-left: 5px;">{{ 'matejer_main.submit_btn'|trans }}</button>
            <button type="button" class="btn btn-default btn-flat medium-btn pull-right" ng-click="dismiss()">{{ 'matejer_main.cancel_btn'|trans }}</button>
        </div>
    {{ form_end(form) }}
</div>
