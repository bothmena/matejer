<div data-stat="success" data-template="true">
    <div class="modal-header">
        <button type="button" class="close" ng-click="dismiss()" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title">{{ 'matejer_user.img_mdl_ttl'|trans }}</h4>
    </div>
    {% form_theme form ':Form:abo_form_inline.html.twig' %}
    {{ form_start( form, {'attr': {'id': 'form_shop_images'}} ) }}
    <div class="modal-body no-padding" style="padding-top: 10px;">
        <div class="row-fluid" style="min-height: 200px;max-height: 300px;overflow-y: auto;">
            <div class="col-md-6">
                {{ form_row(form.logo) }}
                {{ form_row(form._token) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.logos) }}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-danger btn-flat medium-btn pull-right" style="margin-left: 5px;">{{ 'matejer_main.submit_btn'|trans }}</button>
        <button type="button" class="btn btn-default btn-flat medium-btn pull-right" ng-click="dismiss()">{{ 'matejer_main.cancel_btn'|trans }}</button>
    </div>
    {{ form_end(form) }}
</div>
