<div data-stat="success" data-template="true" data-form-stat="danger">
    <div class="modal-body" style="padding-bottom: 0;padding-top: 0;">
        <div class="row" style="height: 50px;width: 100%; padding: 15px 0 10px 10px;">
            <button type="button" class="close" ng-click="dismiss()" style="position: absolute;right: 8px;top: 5px;" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
            <h3 class="modal-title text-capitalize text-center text-primary"><small>{{ 'matejer_offer.modal_header'| trans  }}</small> {{ prod.fullname }}</h3>
        </div>
        <hr class="divider" style="margin: 5px 0 10px 0;">
        <div class="row" style="min-height: 460px;">
            <div class="col-md-6">
                <img src="{{ get_image(prod.image.source, 'prod_modal', prod.image.gcs) }}" style="width: auto;" class="img-responsive"/>
            </div>
            <div class="col-md-6">
                {% form_theme form ':Form:abo_form_inline.html.twig' %}
                {{ form_start(form, {'attr': {'id': 'offerForm'} }) }}
                    {{ form_row(form.reference) }}
                    {{ form_row(form.price) }}
                    {{ form_row(form.discount) }}
                    {{ form_row(form.warranty) }}
                    {{ form_row(form.availability) }}
                    {{ form_row(form.collection) }}
                    {{ form_row(form.payment) }}
                    {{ form_row(form._token) }}
                    {{ form_errors(form) }}
                {{ form_end(form) }}
            </div>
            <div class="col-xs-12" style="margin: 15px 0;">
                <button type="button" class="btn btn-primary btn-flat medium-btn pull-right" style="margin-left: 5px;" ng-click="submit()">{{ 'matejer_main.submit_btn'|trans }}</button>
                <button type="button" class="btn btn-default btn-flat medium-btn pull-right" ng-click="dismiss()">{{ 'matejer_main.cancel_btn'|trans }}</button>
            </div>
        </div>
    </div>
</div>
