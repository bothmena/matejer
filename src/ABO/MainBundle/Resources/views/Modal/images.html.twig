<div id="prod-carousel" class="carousel{# slide#}" data-interval="2500" data-ride="carousel">
    <ol class="carousel-indicators" ng-hide="hideControls">
        {% for image in images %}
            <li {% if loop.first %}class="active" {% endif %}data-target="#prod-carousel" data-slide-to="{{ loop.index0 }}"></li>
        {% endfor %}
    </ol>
    <div class="carousel-inner">
        {% for image in images %}
            <div class="item{% if loop.first %} active{% endif %}">
                <img class="img-responsive undrag" ng-src="{{ get_image(image.image.source, 'prod_gallery', image.image.gcs) }}" alt="{{ catProd.fullname }}">
            </div>
        {% endfor %}
    </div>
    <a class="left carousel-control" href="#prod-carousel" data-slide="prev">
        <span class="fa fa-angle-left"></span>
    </a>
    <a class="right carousel-control" href="#prod-carousel" data-slide="next">
        <span class="fa fa-angle-right"></span>
    </a>
</div>