<div class="modal-header">
    <button type="button" class="close" ng-click="dismiss()" style="position: absolute;right: 8px;top: 5px;" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
    <h4 class="modal-title">{{ 'page.color_modal.header'|trans }}</h4>
</div>
<div class="modal-body">
    <div class="row-fluid">
        <table style="margin: auto;">
            <tbody>
                {% for color in colors %}
                    <tr>
                        {% for clr in color %}
                            <td ng-click="addColor('{{clr}}')" id="td-{{clr}}" class="color-td"><div class="color" style="background-color: #{{clr}};"></div></td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-flat wide-btn pull-right" style="margin-left: 5px;" ng-click="selectColor()">{{ 'matejer_product.add_color'|trans }}</button>
    <button type="button" class="btn btn-default btn-flat medium-btn pull-right" ng-click="dismiss()">{{ 'matejer_main.cancel_btn'|trans }}</button>
</div>
