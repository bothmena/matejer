<div class="__page_data" data-id="prod_reviews_container">
    <div class="row-fluid">
        {% if reviews is not empty %}
            <div class="col-xs-12">
                <div class="callout callout-info box-shadow">
                    <i class="fa fa-edit"></i> {{ 'prod_reviews.reviews'|trans }}
                </div>
            </div>
        {% endif %}
        <div class="col-xs-12 col-md-6">
            {% for review in reviews %}
                {% if loop.index0 is even %}
                    {{ render_esi(url('abo_main_review_productreview', {'id': review.id }) ) }}
                {% endif %}
            {% endfor %}
        </div>
        <div class="col-xs-12 col-md-6">
            {% for review in reviews %}
                {% if loop.index0 is odd %}
                    {{ render_esi(url('abo_main_review_productreview', {'id': review.id }) ) }}
                {% endif %}
            {% endfor %}
        </div>
    </div>
    {{ knp_pagination_render(reviews) }}
</div>
