            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-78469348-1', 'auto');
            ga('send', 'pageview');
        </script>
        {% javascripts
            '@ABOMainBundle/Resources/public/js/home/jquery.js'
            '@ABOMainBundle/Resources/public/js/home/bootstrap.min.js'
            '@ABOMainBundle/Resources/public/js/home/classie.js'
            '@ABOMainBundle/Resources/public/js/home/cbpAnimatedHeader.js'
            '@ABOMainBundle/Resources/public/js/home/jqBootstrapValidation.js'
            '@ABOMainBundle/Resources/public/js/home/agency.js'
            '@ABOMainBundle/Resources/public/js/home/contact_me.js'
            '@ABOMainBundle/Resources/public/js/home/jquery.easing.min.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
