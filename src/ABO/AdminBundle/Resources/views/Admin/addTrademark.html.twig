{% extends "ABOAdminBundle::dashBase.html.twig" %}
{% block options %}options = {fileStyle: true};{% endblock %}

{% block title %}{{'New trademark | Matejer'|trans}}{% endblock %}

{% block content %}
	<div class="row">
        <div class="col-xs-12 col-md-offset-3 col-md-6" style="margin-top: 25px;">

            <div class="box box-primary box-shodow">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-line-chart"></i> {{'Add New Trademark'|trans}}</h3>
                </div>
                <div class="box-body">
                    {% form_theme form ':Form:abo_form_inline.html.twig' %}
                        {{ form_start(form, {'attr': {'id': 'offerForm'} }) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.slogan) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.image) }}
                        {{ form_row(form._token) }}
                        <div class="row-fluid" style="margin-top: 40px;">
                            <input type="submit" class="btn btn-success btn-block" value="{{ 'matejer_main.submit_btn'| trans }}" />
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}
