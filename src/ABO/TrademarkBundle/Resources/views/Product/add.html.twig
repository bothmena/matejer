{% extends "ABOTrademarkBundle::dashBase.html.twig" %}

{% block title %}ABOTrademarkBundle:Show:home{% endblock %}
{% block options %}options = {select: true, checkbox: true, imagePicker: false, postImgPckr: true, checkClass: 'pull-left', fileStyle: true };{% endblock %}

{% block content %}
    <div class="row">
    	{% form_theme form ':Form:abo_form_gspecs.html.twig' %}
        {{ form_start(form, {'action': form.vars.action, 'method': 'POST' }) }}
            <div class="col-xs-12 col-md-6">
                <div class="box box-warning box-shadow">
                    <div class="box-header">
                        <h3 class="box-title">{{ 'matejer_product.product_details'|trans }}</h3>
                    </div>
                    <div class="box-body">
                        {% if form.anyParent is defined %}
                            <div class="row-fluid" style="margin-top: 10px;">
                                <label class="btn btn-default btn-flat btn-block" style="margin-top: 3px;text-align: left;">
                                    {{ form_widget(form.anyParent) }} <span style="margin-left: 5px;">{{ form.anyParent.vars.label|trans }}</span>
                                </label>
                                {{ form_errors(form.anyParent) }}
                            </div>
                        {% endif %}
                        {{ form_row(form.product.reference) }}
                        {{ form_row(form.product.name) }}
                        {{ form_row(form.arrangement) }}
	                    {{ form_row(form.feature) }}
                        {% if form.size is defined  %}
                            {% for field in form.size %}
                                {{ form_row(field) }}
                            {% endfor %}
                        {% endif %}
                        {% if form.parentColors is defined %}
                            {{ form_row(form.parentColors) }}
                        {% endif %}
                        <div class="row-fluid" style="margin-top: 10px;">
                            {{ form_label(form.colors) }}
                            <div color color-btn="warning" color-fullname="{{ form.colors.vars.prototype.code.vars.full_name }}">
                                {{ form_widget(form.colors) }}
                            </div>
                            {{ form_errors(form.colors) }}
                        </div>
                        {% if form.generalSpecs.source is defined %}
                            {{ form_row(form.generalSpecs.source) }}
                        {% endif %}
                        {% if form.generalSpecs.videoSite is defined %}
                            {{ form_row(form.generalSpecs.videoSite) }}
                            {{ form_row(form.generalSpecs.video) }}
                        {% endif %}
                        {{ form_row(form.image.file) }}
                        {% if form.image.files is defined %}
                            {{ form_row(form.image.files) }}
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6">
                <div class="box box-warning box-shadow">
                    <div class="box-header">
                        <h3 class="box-title">{{ 'matejer_genspecs.genspecs'|trans }}</h3>
                    </div>
                    <div class="box-body">
                        {% for field in form.generalSpecs %}
                            {{ form_row(field) }}
                        {% endfor %}
                        {{ form_row(form.afterSubmit) }}
                        {{ form_row(form._token) }}
                    </div>
                    {{ form_errors(form) }}
                    <div class="box-footer">
                        <button type="submit" class="btn btn-warning btn-flat pull-right">{{ 'matejer_main.submit_prod_btn'| trans }}</button>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
