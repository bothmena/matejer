{% extends "ABOTrademarkBundle::dashBase.html.twig" %}

{% block title %}{{ trademark.name }} all features{% endblock %}

{% block stylesheets %}
    {% stylesheets 'bundles/AdminLTE_2_3_0/plugins/datatables/dataTables.bootstrap.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {% javascripts 'bundles/AdminLTE_2_3_0/plugins/datatables/jquery.dataTables.min.js'
    'bundles/AdminLTE_2_3_0/plugins/datatables/dataTables.bootstrap.min.js' %}
    <script src="{{ asset_url }}" defer></script>
    {% endjavascripts %}
{% endblock %}

{% block content %}
    <div class="row">
        {% for trans,category in features %}
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">All {{ trans|trans }} Features List</h3>
                    </div>
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for feature in category %}
                                <tr>
                                    <td>{{ feature.id }}</td>
                                    <td>{{ feature.name }}</td>
                                    <td>{{ feature.description }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <script>
        $(function () {
            $('#example1').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true
            });
        });
    </script>
{% endblock %}
