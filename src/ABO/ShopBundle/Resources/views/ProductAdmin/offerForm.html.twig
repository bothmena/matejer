{{ form_start(form, { 'method': 'POST', 'action': form.vars.action }) }}
    <div class="col-xs-12" style="margin-bottom: 10px;">
        <button type="submit" class="btn btn-danger btn-flat pull-right medium-btn" ng-click="submitOffer()">{{ 'matejer_main.save_btn'|trans }}</button>
        <a class="btn btn-default btn-flat pull-right medium-btn" style="margin-right: 10px;" ng-click="toggleForm()">{{ 'matejer_main.cancel_btn'|trans }}</a>
    </div>
    <div class="row-fluid">
        <div class="col-md-4">
            <div class="box box-danger box-shadow">
                <div class="box-header">
                    <h3 class="box-title">{{ 'matejer_offer.price'| trans }}</h3>
                </div>
                <div class="box-body">
                    <div class="input-group">
                        {{ form_widget(form.price) }}
                        <span class="input-group-addon" id="{{ form.price.vars.attr['aria-describedby'] }}">{{ form.price.vars.attr['data-addon']|trans }}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-4">
            <div class="box box-danger box-shadow">
                <div class="box-header">
                    <h3 class="box-title">{{ 'matejer_offer.discount'| trans }}</h3>
                </div>
                <div class="box-body">
                    <div class="input-group">
                        {{ form_widget(form.discount) }}
                        <span class="input-group-addon" id="{{ form.discount.vars.attr['aria-describedby'] }}">{{ form.discount.vars.attr['data-addon']|trans }}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-danger box-shadow">
                <div class="box-header">
                    <h3 class="box-title">{{ 'matejer_offer.reference'| trans }}</h3>
                </div>
                <div class="box-body">
                    {{ form_widget(form.reference) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-danger box-shadow">
                <div class="box-header">
                    <h3 class="box-title">{{ 'matejer_offer.warranty'| trans }}</h3>
                </div>
                <div class="box-body">
                    <div class="input-group">
                        {{ form_widget(form.warranty) }}
                        <span class="input-group-addon" id="{{ form.warranty.vars.attr['aria-describedby'] }}">{{ form.warranty.vars.attr['data-addon']|trans }}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-danger box-shadow">
                <div class="box-header">
                    <h3 class="box-title">{{ 'matejer_offer.availability'| trans }}</h3>
                </div>
                <div class="box-body">
                    {{ form_widget(form.availability) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="box box-danger box-shadow">
                <div class="box-header">
                    <h3 class="box-title">{{ 'matejer_collection.collections'| trans }}</h3>
                </div>
                <div class="box-body">
                    {{ form_widget(form.collection) }}
                </div>
            </div>
        </div>
        <div class="col-md-4 col-md-offset-4">
            <div class="box box-danger box-shadow">
                <div class="box-header">
                    <h3 class="box-title">{{ 'matejer_payment.payments'| trans }}</h3>
                </div>
                <div class="box-body">
                    {{ form_widget(form.payment) }}
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}
