{% form_theme form ':Form:abo_form_simple.html.twig' %}
{{ form_start(form, {'attr': {'id': 'remove_edit_shop_col_form'} }) }}
    <div class="modal-header"><button type="button" class="close" ng-click="dismiss()" aria-label="Close"><span aria-hidden="true">Ã—</span></button><h4 class="modal-title">{{ "matejer_collection.edit"|trans }}</h4></div>
    <div class="modal-body">
        {{ form_row(form.name, { 'attr': { 'ng-keydown': 'disableSubmit($event)' } }) }}
        {{ form_row(form.category) }}
	    {{ form_row(form.parent) }}
	    <div class="row-fluid" style="margin-top: 10px;">
		    <label class="btn btn-default btn-flat btn-block" style="margin-top: 3px;text-align: left;">
			    {{ form_widget(form.anyParent) }} {{ form.anyParent.vars.label|trans }}
		    </label>
		    {{ form_errors(form.anyParent) }}
	    </div>
	    <div class="callout callout-info box-shadow" style="margin-top: 10px;">
		    <i class="fa fa-info-circle"></i> {{ 'matejer_collection.anyParent.note'|trans }}
	    </div>
        {{ form_row(form._token) }}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-flat" ng-click="dismiss()">{{ 'matejer_main.cancel_btn'|trans }}</button>
        <button type="button" class="btn btn-primary btn-flat" ng-click="submit()">{{ 'matejer_main.confirm_btn'|trans }}</button>
    </div>
{{ form_end(form) }}
