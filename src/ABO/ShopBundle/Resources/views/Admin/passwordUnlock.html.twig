{% form_theme form ':Form:abo_form_simple.html.twig' %}
{{ form_start(form, {'attr': {'id': 'password_unlock_admin_mode'} }) }}
    <div class="modal-header">
        <button type="button" class="close" ng-click="dismiss()" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <h4 class="modal-title">{{ 'remove_password_modal.title_cat'|trans }}</h4>
    </div>
    <div class="modal-body">
        <div class="callout callout-info box-shadow" role="alert">
            <p><i class="fa fa-info-circle"></i> {{ message|trans }}</p>
            <p>{{ 'matejer_main.pass_unlock_note'|trans }}</p>
        </div>
        {{ form_row(form.password) }}
        {{ form_row(form._token) }}
        {{ form_errors(form) }}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-flat" ng-click="dismiss()">{{ 'matejer_main.cancel_btn'|trans }}</button>
        <button type="button" class="btn btn-primary btn-flat" ng-click="submit()">{{ 'matejer_main.confirm_btn'|trans }}</button>
    </div>
{{ form_end(form) }}
