{% form_theme form ':Form:abo_form_simple.html.twig' %}
{{ form_start(form, {'attr': {'id': 'remove_edit_shop_pay_form'} }) }}
    <div class="modal-header"><button type="button" class="close" ng-click="dismiss()" aria-label="Close"><span aria-hidden="true">Ã—</span></button><h4 class="modal-title">{{ "matejer_payment.edit"|trans }}</h4></div>
    <div class="modal-body">
        {{ form_row(form.name, { 'attr': { 'ng-keydown': 'disableSubmit($event)' } }) }}
        {{ form_label(form.addedValue) }}
        <div class="input-group">
            {{ form_widget(form.addedValue, { 'attr': { 'ng-keydown': 'disableSubmit($event)' } }) }}
            <span class="input-group-addon" value="percent" id="addedValue-addon"> %</span>
        </div>
        {{ form_errors(form.addedValue) }}
        {{ form_label(form.advance) }}
        <div class="input-group">
            {{ form_widget(form.advance, { 'attr': { 'ng-keydown': 'disableSubmit($event)' } }) }}
            <span class="input-group-addon" value="percent" id="advance-addon"> %</span>
        </div>
        {{ form_errors(form.advance) }}
        {{ form_row(form.month, { 'attr': { 'ng-keydown': 'disableSubmit($event)' } }) }}
        {{ form_errors(form) }}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default btn-flat" ng-click="dismiss()">{{ 'matejer_main.cancel_btn'|trans }}</button>
        <button type="button" class="btn btn-primary btn-flat" ng-click="submit()">{{ 'matejer_main.confirm_btn'|trans }}</button>
    </div>
{{ form_end(form) }}
