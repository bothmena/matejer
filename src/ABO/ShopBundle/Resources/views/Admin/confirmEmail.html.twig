{{ form_start(form) }}
    <div class="row-fluid">
        <i class="fa fa-check-circle text-success pull-right font-large" ng-show="confirmed"></i> {[{ email }]}
        <a class="btn btn-warning btn-sm btn-flat pull-right" ng-click="toggleConfirm();" ng-hide="confirmed" ng-disabled="confirmed">
            <span ng-hide="confirmEmail">{{ 'matejer_email.confirm_mail'|trans }}</span>
            <span ng-show="confirmEmail">{{ 'matejer_email.confirm_cancel'|trans }}</span>
        </a>
    </div>
    <div class="row-fluid" style="margin-top: 20px;" ng-show="confirmEmail">
            <div class="input-group">
                {{ form_widget(form.code) }}
                <span class="input-group-btn">
                    <button class="btn btn-danger btn-sm btn-flat" ng-click="submitCode()" ng-disabled="submitting" type="button">
                        <i class="fa fa-spin fa-spinner" ng-show="submitting"></i> {{ 'matejer_email.confirm_action'|trans }}
                    </button>
                </span>
                <span class="input-group-btn">
                    <button class="btn btn-success btn-sm btn-flat" ng-click="resendCode()" ng-disabled="resending" type="button">
                        <i class="fa fa-spin fa-spinner" ng-show="resending"></i> {{ 'matejer_email.resend_code'|trans }}
                    </button>
                </span>
            </div>
        <span ng-class="{'text-danger': submitError, 'text-success': !submitError}">{[{ submitText }]}</span>
    </div>
{{ form_end(form) }}
