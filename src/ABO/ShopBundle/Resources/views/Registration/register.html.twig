{% extends "::formPage.html.twig" %}

{% block title %}{{ 'shop_registration_register.title'|trans }}{% endblock %}
{% block meta_description %}{{ 'shop_registration_register.description'| trans }}{% endblock %}
{% block options %}options = {checkbox: true, select: true};{% endblock %}

{% block form_box %}
	<div class="register-box-body" ng-controller="EditProfileController" ng-init="addressUrl = '{{ url('abo_shop_registration_register') }}';">
        {% form_theme form ':Form:abo_form_simple.html.twig' %}
        {{ form_start(form, {'action': form.vars.action, 'method': 'POST','attr': {'id': 'editForm'} }) }}
            <div class="form-group has-feedback{% if not form.name.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.name ) }}
                <span class="fa fa-university form-control-feedback"></span>
            </div>
            {{ form_errors(form.name) }}
            
            <div class="form-group has-feedback{% if not form.slogan.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.slogan ) }}
                <span class="fa fa-quote-left form-control-feedback"></span>
            </div>
            {{ form_errors(form.slogan) }}

            <div class="form-group has-feedback{% if not form.email.email.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.email.email ) }}
                <span class="fa fa-envelope-o form-control-feedback"></span>
            </div>
            {{ form_errors(form.email.email) }}

            <div class="row-fluid" style="margin-top: 20px;">
                <div class="callout callout-info box-shadow"><i class="fa fa-info-circle"></i> {{ 'shop_registration_register.email_note'|trans }}</div>
            </div>
            
            <div class="form-group{% if not form.address.country.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.address.country ) }}
            </div>
            {{ form_errors(form.address.country) }}
            
            <div class="form-group{% if not form.address.state.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.address.state ) }}
            </div>
            {{ form_errors(form.address.state) }}
            
            <div class="form-group{% if not form.address.city.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.address.city ) }}
            </div>
            {{ form_errors(form.address.city) }}
            <div class="form-group has-feedback{% if not form.address.street.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.address.street ) }}
                <span class="fa fa-location-arrow form-control-feedback"></span>
            </div>
            {{ form_errors(form.address.street) }}
            <div class="form-group has-feedback{% if not form.address.postalCode.vars.valid %} has-error{% endif %}">
                {{ form_widget(form.address.postalCode ) }}
                <span class="fa fa-asterisk form-control-feedback"></span>
            </div>
            {{ form_errors(form.address.postalCode) }}
            <div class="row-fluid" style="margin-top: 20px;">
                <div class="callout callout-info box-shadow"><i class="fa fa-info-circle"></i> {{ 'shop_registration_register.after_submit'|trans }}</div>
            </div>

            <div class="row">
                {#<div class="col-xs-12">
                    <div class="checkbox icheck">
                        <label>
                            {{ form_widget(form.terms) }} {{ 'user_security_register.pre_terms'|trans }} <span help help-group="shop-terms" help-text="terms" help-class=""></span>
                        </label>
                    </div>
                </div>
                {% if form.terms.vars.errors|length > 0 %}
                    <div class="col-xs-12">{{ form_errors(form.terms) }}</div>
                {% endif %}#}
                <div class="col-xs-offset-6 col-xs-6">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'matejer_main.register_btn'|trans }}</button>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock form_box %}

{% block page_seo %}
	<script type="application/ld+json">
        {
            "@context" : "http://schema.org",
            "@type" : "WebSite",
            "name" : "{{ 'seo.website.name'|trans }}",
            "alternateName" : "{{ 'seo.website.alternateName'|trans }}",
            "url" : "{{ url('abo_main_home_home') }}",
            "genre": "{{ 'seo.website.genre'|trans }}",
            "image": "{{ asset('/images/logo.png') }}",
            "sameAs" : [
			    "{{ fb_profile }}",
			    "{{ gp_profile }}",
			    "{{ tw_profile }}",
			    "{{ in_profile }}",
			    "{{ yt_profile }}"
		  	],
            "about": {
                "@type": "Thing",
                "name": "{{ 'seo.website.about.name'|trans }}",
                "description": "{{ 'seo.website.about.description'|trans }}",
                "url": "{{ url('abo_support_main_aboutus') }}"
            },
            "creator": {
                "@type": "Person",
                "name": "{{ 'seo.website.creator.first_name'|trans }}",
                "familyName": "{{ 'seo.website.creator.last_name'|trans }}",
                "birthDate": "{{ 'seo.website.creator.birthday'|trans }}",
                "birthPlace": {
                    "@type": "Place",
                    "address": {
                      "@type": "PostalAddress",
                      "addressCountry": "{{ 'seo.website.creator.birth_place.country'|trans }}",
                      "addressLocality": "{{ 'seo.website.creator.birth_place.locality'|trans }}"
                    }
                },
                "email": "{{ 'seo.website.creator.email'|trans }}",
                "telephone": "{{ 'seo.website.creator.telephone'|trans }}",
                "description": "{{ 'seo.website.creator.description'|trans }}",
                "address": {
                    "@type": "PostalAddress",
                    "addressCountry": "{{ 'seo.website.creator.address.country'|trans }}",
                    "addressLocality": "{{ 'seo.website.creator.address.locality'|trans }}",
                    "streetAddress": "{{ 'seo.website.creator.address.street'|trans }}",
                    "postalCode": "{{ 'seo.website.creator.address.postal_code'|trans }}"
                },
                "image": "{{ asset('/images/website.creator.jpg') }}"{#,
                "url": "https://www.matejer.com" creator url#}
            },
            "keywords": "{{ 'seo.website.keywords'|trans }}",
            "inLanguage": [{
                    "@type": "Language",
                    "name": "{{ 'seo.website.language.en'|trans }}"
                },{
                    "@type": "Language",
                    "name": "{{ 'seo.website.language.fr'|trans }}"
                },{
                    "@type": "Language",
                    "name": "{{ 'seo.website.language.ar'|trans }}"
                }]
        }
    </script>
{% endblock %}
